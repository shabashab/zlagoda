{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-inline-comments": "error",
    "no-irregular-whitespace": "error",
    "no-multi-spaces": "error",
    "no-multiple-empty-lines": "error",
    "no-console": "error",
    "no-control-regex": "warn"
  }
}
