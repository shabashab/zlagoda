{
  "name": "server",
  "main": "src/index.ts",
  "type": "commonjs",
  "packageManager": "yarn@3.4.1",
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "@prisma/client": "^4.9.0",
    "axios": "^1.3.4",
    "bcrypt": "^5.1.0",
    "bullmq": "^3.6.3",
    "dotenv": "^16.0.3",
    "fastify": "^4.12.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.1",
    "pg": "^8.11.0",
    "prisma": "^4.9.0",
    "telegraf": "^4.12.2",
    "tsconfig-paths": "^4.1.2",
    "uuid": "^9.0.0",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@swc/core": "^1.3.56",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.13.0",
    "@types/nodemailer": "^6.4.7",
    "@types/pg": "^8.10.2",
    "@types/qrcode": "^1.5.0",
    "@types/uuid": "^9.0.1",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "dev": "nodemon --config nodemon.json",
    "exec": "node --experimental-specifier-resolution=node --loader ts-node/esm",
    "start": "yarn run exec .",
    "start:node": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index.js",
    "build": "tsc",
    "afterbuild": "ef-tspm",
    "db:drop": "prisma migrate reset",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "yarn run exec prisma/seed.ts",
    "db:update": "prisma migrate dev",
    "start:deploy": "prisma migrate deploy && node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index.js"
  }
}
